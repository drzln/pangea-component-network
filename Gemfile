source %(https://rubygems.org)

group :development do
  %w[
    rubocop-rspec
    rubocop-rake
    keycutter
    rspec
    rake
    yard
  ].each do |this_gem|
    gem this_gem
  end
end

group :production do
  %w[
    aws-sdk-dynamodb
    terraform-synthesizer
    abstract-synthesizer
    tty-progressbar
    tty-option
    tty-table
    tty-color
    tty-box
    toml-rb
    bundler
  ].each do |this_gem|
    gem this_gem
  end
end
